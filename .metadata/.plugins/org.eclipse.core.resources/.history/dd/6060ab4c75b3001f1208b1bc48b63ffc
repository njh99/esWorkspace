

import java.io.IOException;
import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;


import java.io.IOException;
import java.io.UnsupportedEncodingException;
import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;

import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import co.kh.dev352.common.DBUtility;

@WebServlet("/loginCheckServlet.do")
public class LoginCheckServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;

	public LoginCheckServlet() {
		super();
	}

	private void processRequest(HttpServletRequest request, HttpServletResponse response) throws UnsupportedEncodingException {
		// 1. 사용자정보를 얻는다
		request.setCharacterEncoding("UTF-8");
		String id = request.getParameter("id");
		String pwd = request.getParameter("pwd");

		Connection con = DBUtility.dbCon();
		final String SELECT_SQL = "SELECT PWD, NAME FROM ACCOUNT WHERE ID = ?";
		PreparedStatement pstmt = null;
		ResultSet rs = null;
		try {
			pstmt = con.prepareStatement(SELECT_SQL);
			pstmt.setString(1, id);
			rs = pstmt.executeQuery();
			// 2. 데이터베이스에서 확인한다. 확인이 완료됐으면 세션을 만들어준다.
			// pwd 값이 있으면 re.next() => true, 없으면 false
			if (rs.next()) {
				String dPwd = rs.getString("PWD");
				String name = rs.getString("NAME");
				if (pwd.equals(dPwd)) {
					//ID와 페스워드 잘된경우
					//세션값을 가져와서 세션에 등록한다.
					HttpSession session = request.getSession();
					session.setAttribute("id", id);
					session.setAttribute("pwd", pwd);
					session.setAttribute("name", name);
				}else {
					//id는 맞는데 패스워드가 틀린경우
				}
			}else {
				//id가 잘못되었음을 알려준다. 
			}
			response.sendRedirect("loginServlet.do");
		} catch (Exception e) {
			e.printStackTrace();
		}finally {
			DBUtility.dbClose(con, pstmt, rs);
		}

	}

	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws UnsupportedEncodingException {
		processRequest(request, response);
	}

	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws UnsupportedEncodingException {
		processRequest(request, response);
	}

}